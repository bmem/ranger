%h1 Listing users

= page_entries_info @users, :model => 'users'
= will_paginate @users, :inner_window => 10

%table
  %tr
    %th Callsign
    %th Full name
    %th Email
    %th Disabled?
    %th Last login

  - @users.each do |user|
    - person = user.person || Person.new
    %tr
      %td= link_to person.to_s, user
      %td= link_to person.full_name, user
      %td= link_to user.email, user
      %td= 'Disabled' if user.disabled?
      %td= user.last_sign_in_at.try {|time| l time}

= will_paginate @users, :inner_window => 10
