%h1 Listing slots

= will_paginate @slots, :inner_window => 10, :outer_window => 5

%table
  %tr
    %th Shift
    %th Position
    %th Start time
    %th End time
    %th Credits
    %th
      Min
      %br
      people
    %th
      Max
      %br
      people
    %th
    %th
    %th

  - @slots.each do |slot|
    %tr
      %td= link_to_record slot.shift
      %td= link_to_record slot
      %td= l slot.shift.start_time
      %td= l slot.shift.end_time
      %td= format('%.2f', slot.credit_value)
      %td= slot.min_people
      %td= slot.max_people
      %td= link_to 'Show', slot
      %td= link_to 'Edit', edit_slot_path(slot)
      %td= link_to 'Destroy', slot, :confirm => 'Are you sure?', :method => :delete

= will_paginate @slots, :inner_window => 10, :outer_window => 5
