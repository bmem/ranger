= semantic_form_for [@shift_template, @slot_template] do |f|
  = f.inputs do
    = f.input :shift_template, :collection => Hash[ShiftTemplate.all.map{|t| [t.title, t.id]}]
    = f.input :position
    = f.input :min_people, :as => :number
    = f.input :max_people, :as => :number

  = f.actions do
    = f.action(:submit)
