- content_for :main_action_list_items do
  - if @event
    %li= link_to "Participants in #{@event}", event_participants_path(@event)
    - if @event and can? :create, :participants
      %li= link_to "Add someone to #{@event}", new_event_participant_path(@event)
  - else
    %li= link_to 'All participants', participants_path
  = render 'record_actions'
