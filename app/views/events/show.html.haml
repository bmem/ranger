%h1
  = @event.name
%p
  %b Type:
  = @event.type
- if @event.linked_event
  %p
    %b= "Linked #{@event.linked_event.class}:"
    = link_to_record @event.linked_event
%p
  %b Description:
  = @event.description
%p
  %b Start date:
  = @event.start_date
%p
  %b End date:
  = @event.end_date
%p
  %b Signup open:
  = @event.signup_open
- if person_me
  %p
    %b= "Involvement status (#{person_me}):"
    - if involvement = involvement_for_event_person(@event, person_me)
      = link_to involvement.involvement_status, event_involvement_path(@event, involvement)
    - else
      none
      - if @event.signup_open
        = link_to 'Get involved', new_event_involvement_path(@event, :person_id => person_me.id)


- if can? :manage, CreditScheme
  %p
    %b Credit schemes:
    - @event.credit_schemes.order(:name).each do |scheme|
      = link_to_record scheme
    = link_to 'New credit scheme', new_event_credit_scheme_path(@event)
%p
  %h3= link_to 'Shifts', event_shifts_path(@event)
  - if can? :create, Shift
    = render 'shifts/template_picker'
  %table
    %tr
      %th= Shift.human_attribute_name(:name)
      %th= Shift.human_attribute_name(:start_time)
      %th= Shift.human_attribute_name(:end_time)
    - @event.shifts.each do |shift|
      %tr
        %td= link_to shift.name, event_shift_path(@event, shift)
        %td= l shift.start_time
        %td= l shift.end_time

= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path
